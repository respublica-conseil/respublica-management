<div class="container">
<h1>Nouvelle Mission</h1>
<p></p>
<td><%= button_to "Retour aux missions", missions_path, method: :get, class: 'btn btn-primary' %></td>
<p></p>
<%= form_with model: @mission, url: missions_path do |form| %>
  <div class="form-group">
    <%= form.label :Référence_mission %>
    <%= form.text_field :mission_reference %>
  </div>

  <div class="form-group">
    <%= form.label :Nom_mission %>
    <%= form.text_field :nom %>
  </div>

  <div class="form-group" >
    <%= form.label :Consultant_référant %>
    <%= form.select(:consultant_reference, Consultant.all.collect {|p| [ p.full_name, p.full_name ] }, { include_blank: false }) %>
  </div>


  <div class="form-group" >
  <%= form.label :Consultants %>
  <%= form.collection_check_boxes(:consultants, Consultant.all, :full_name, :full_name) do |cb| %>
  <div class="checkbox">
    <%= cb.check_box %>
    <%= cb.label %>
  </div>
<% end %>


  </div>

  <div class="form-group">
    <%= form.label :Type_mission%>
    <%= form.select :mission_type, ['Accord cadre', 'Mission','Projet transverse'] %>
  </div>

  <div class="form-group">
    <%= form.label :Statut_mission%>
    <%= form.select :mission_status, ['Offre', 'En cours','Terminé'] %>
  </div>


  <div class="form-group">
    <%= form.label :Date_début %>
    <%= form.date_field :start_date %>
  </div>

  <div class="form-group">
    <%= form.label :Date_fin %>
    <%= form.date_field :end_date %>
  </div>


  <div class="actions">
    <%= form.submit "Ajouter Mission" %>
  </div>
<% end %>

</div>
