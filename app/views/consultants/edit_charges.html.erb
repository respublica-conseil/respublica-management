<div class="container">
 <p></p>
  <h1>Remplir les charges du consultant <%= @consultant.full_name %></h1>
 
  <td><%= button_to "Retour aux consultants", consultants_path, method: :get, class: 'btn btn-primary' %></td>
  <p></p>
  <% @missions.each do |mission| %>
    <% charge = Charge.where(consultant_full_name: @consultant.full_name, mission_reference: mission.mission_reference).first %>
    <%= form_with model: charge, url: update_charges_consultant_path(charge), method: :patch do |form| %>
      <table class="table table-striped table-bordered table-hover">
        <thead>
          <tr class="table-missions">
            <th>RÃ©f Mission</th>
            <th>Mars</th>
            <th>Avril</th>
            <th>Mai</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= charge.mission_reference %></td>
            <td class="text-center"><%= form.number_field :march_charge %></td>
            <td class="text-center"><%= form.number_field :april_charge %></td>
            <td class="text-center"><%= form.number_field :may_charge %></td>
          </tr>
        </tbody>
      </table>
      <%= form.submit "Modifier les charges", class: 'btn btn-primary' %>
      <p></p>
    <% end %>
  <% end %>
</div>